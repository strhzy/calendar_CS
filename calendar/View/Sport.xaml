<UserControl x:Class="calendar.View.Sport"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:calendar.View"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition  Width="2*"/>
        </Grid.ColumnDefinitions>
        <CheckBox x:Name="SportCheckBox" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="0"/>
        <Image x:Name="SportImage" Grid.Column="1"/>
        <TextBlock x:Name="NameOfSport" Grid.Column="2"/>
    </Grid>
</UserControl>
